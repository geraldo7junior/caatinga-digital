<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:id="@+id/quiz_root_layout"
	android:isScrollContainer="true"
	android:orientation="vertical"
	android:background="@drawable/backgrounddois"
	android:layout_width="fill_parent">
	<RelativeLayout
		android:id="@+id/quiz_topic_relative_layout"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dip"
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="40dip"
			android:textColor="#000000"
			android:text="Topic"
			android:id="@+id/quiz_topic"
			android:layout_centerHorizontal="true"></TextView>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/quiz_question_relative_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/quiz_question"
			android:text="Question"
			android:textColor="#000000"
			android:minLines="3"
			android:layout_marginBottom="10dip"
			android:textSize="20dip" android:paddingLeft="5dip"></TextView>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/quiz_answers_relative_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ListView
			android:layout_height="fill_parent"
			android:clickable="true"
			android:layout_width="fill_parent"
			android:id="@+id/quiz_answers"></ListView>
	</RelativeLayout>
	
</LinearLayout>
