<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center"
	android:background="@drawable/backgrounddois"
	android:id="@+id/quiz_end_root_layout">
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/quiz_end_top_relative_layout"
		android:layout_above="@+id/quiz_end_totals_relative_layout"
		android:layout_marginBottom="80dip">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_above="@+id/quiz_end_correct_relative_layout"
			android:id="@+id/txt_end_of_quiz"
			android:textColor="#000000"
			android:text="@string/quiz_end_header"
			android:textSize="50dip"></TextView>
	</RelativeLayout>
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerInParent="true"
		android:id="@+id/quiz_end_totals_relative_layout">
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/quiz_end_correct_relative_layout"
			android:minWidth="100dip">
			<TextView
				android:id="@+id/quiz_end_correct_header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text="@string/correct_answers_header"
				android:layout_centerHorizontal="true"></TextView>
			<TextView
				android:layout_below="@+id/quiz_end_correct_header"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/quiz_end_correct_number"
				android:layout_centerHorizontal="true"
				android:textSize="30dip"></TextView>
		</RelativeLayout>
		<RelativeLayout
			android:layout_toRightOf="@+id/quiz_end_correct_relative_layout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/quiz_end_incorrect_relative_layout"
			android:minWidth="100dip">
			<TextView
				android:id="@+id/quiz_end_incorrect_header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text="@string/incorrect_answers_header"
				android:layout_centerHorizontal="true"></TextView>
			<TextView
				android:layout_below="@+id/quiz_end_incorrect_header"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/quiz_end_incorrect_number"
				android:layout_centerHorizontal="true"
				android:textSize="30dip"></TextView>
		</RelativeLayout>
	</RelativeLayout>
	<RelativeLayout
		android:layout_below="@+id/quiz_end_totals_relative_layout"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/quiz_end_bottom_relative_layout"
		android:layout_marginTop="50dip">

		<Button
		    android:id="@+id/quiz_end_accept_button"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:text="Sair" />

	</RelativeLayout>

	<Button
	    android:id="@+id/btnmenu"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/quiz_end_totals_relative_layout"
	    android:text="Jogar Novamente" />
	
		<Button
	    android:id="@+id/button1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	     android:layout_alignParentLeft="true"
	    android:layout_below="@+id/quiz_end_bottom_relative_layout"
	    android:text="Visualizar Ranking" />
	
	<LinearLayout xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center">

     </LinearLayout>



</RelativeLayout>
